# =============================================================================
# TalentAI Environment Configuration
# =============================================================================
# Copy this file to .env and update the values according to your environment

# =============================================================================
# EXTERNAL DATABASE CONFIGURATION
# =============================================================================
# External PostgreSQL Database Configuration
DB_POSTGRESDB_HOST=your-postgres-host.com
DB_POSTGRESDB_PORT=5432
DB_POSTGRESDB_DATABASE=talentai
DB_POSTGRESDB_USER=talentai_user
DB_POSTGRESDB_PASSWORD=your_secure_password_here
DB_POSTGRESDB_SCHEMA=public
DB_POSTGRESDB_SSL_ENABLED=false

# Full database URL (constructed from above variables)
DATABASE_URL=postgresql://${DB_POSTGRESDB_USER}:${DB_POSTGRESDB_PASSWORD}@${DB_POSTGRESDB_HOST}:${DB_POSTGRESDB_PORT}/${DB_POSTGRESDB_DATABASE}

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
PROJECT_NAME=TalentAI
VERSION=1.0.0
DESCRIPTION=TalentAI - Academic Program Recommendation System
API_V1_STR=/api/v1

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Generate a secure secret key for production
# You can use: openssl rand -hex 32
SECRET_KEY=your-super-secret-key-change-in-production-please
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================
ENVIRONMENT=development
DEBUG=true

# =============================================================================
# SERVER PORTS
# =============================================================================
BACKEND_PORT=8000

# =============================================================================
# DIRECTORIES (Docker volumes)
# =============================================================================
BASE_DIR=/app
MODELS_DIR=/app/models
DATA_DIR=/app/data
LOGS_DIR=/app/logs

# =============================================================================
# REDIS CONFIGURATION (Optional - for caching)
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# =============================================================================
# MACHINE LEARNING CONFIGURATION
# =============================================================================
# Model training parameters
DEFAULT_MODEL_TYPE=knn
MAX_TRAINING_TIME=300
MODEL_CACHE_SIZE=10

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE_MAX_SIZE=10485760
LOG_FILE_BACKUP_COUNT=5

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=*

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================
# Uncomment and configure for production deployment
# ENVIRONMENT=production
# DEBUG=false
# ALLOWED_ORIGINS=https://yourdomain.com
# SECRET_KEY=your-production-secret-key
# POSTGRES_PASSWORD=your-production-db-password